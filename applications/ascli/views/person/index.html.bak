<script type="text/javascript">


$(document).ready(function(){
/* Función para mostrar un datatable de jquery    */

    /*
    $("#hijos").DataTable({
        data:  {{=results}},
        columns: [
            { data: 'first_name' },
            { data: 'last_name' }
            // 'id' omitted to show that you can
            // use only the fields you choose
        ],
        "language": {
            "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Spanish.json"
        },
        "scrollY":        "300px",
        "scrollCollapse": true,
        "paging": true
    })
    */

    var table = $('#hijos').DataTable(
    {
        data:  {{=results}},
        /* campos a mostrar */
        columns: [
            { data: 'first_name' },
            { data: 'last_name' }
            // 'id' omitted to show that you can
            // use only the fields you choose
        ],
        /* Botones a mostrar */
        buttons: [
            'copy', 'excel', 'pdf'
        ],
        /* Lenguaje de la tabla */
        "language": {
          /*  "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Spanish.json" */
            "url": "{{=URL('static','json/Spanish.json')}}"
        },
        /* Propiedades de la tabla */
        "scrollY":        "300px",
        "scrollCollapse": true,
        "paging": true,
        "dom": 'T<"clear">lfrtip',
        "tableTools": {
            "sSwfPath": "/swf/copy_csv_xls_pdf.swf"
        }
    }
    );

    /* Para habilitar la selección de un solo registro en la tabla */
    $('#hijos tbody').on( 'click', 'tr', function () {
        if ( $(this).hasClass('selected') ) {
            $(this).removeClass('selected');
        }
        else {
            table.$('tr.selected').removeClass('selected');
            $(this).addClass('selected');
        }
    } );

    $('#button').click( function () {
        table.row('.selected').remove().draw( false );
    } );

});

</script>
